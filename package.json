{
  "name": "@portfolio/workspace",
  "version": "1.0.0",
  "description": "Portfolio",
  "author": "Chris Whitlam",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:api": "yarn --cwd packages/api build",
    "build:ui": "yarn --cwd packages/ui build",
    "build": "concurrently -n ui,api -c blue,magenta --kill-others \"yarn build:ui\" \"yarn build:api\"",
    "export:ui": "yarn --cwd packages/ui export",
    "dev:api": "yarn --cwd packages/api dev",
    "dev:ui": "yarn --cwd packages/ui dev",
    "dev": "concurrently -n ui,api -c blue,magenta --kill-others \"yarn dev:ui\" \"yarn dev:api\"",
    "lint:api": "yarn --cwd packages/api lint",
    "lint:ui": "yarn --cwd packages/ui lint",
    "lint": "concurrently -n ui,api -c blue,magenta -m 1 \"yarn lint:ui\" \"yarn lint:api\"",
    "prepare": "husky install",
    "test:api": "yarn --cwd packages/api test",
    "test:api:ci": "yarn --cwd packages/api test:ci",
    "test:ui": "yarn --cwd packages/ui test",
    "test:ui:ci": "yarn --cwd packages/ui test:ci",
    "test": "concurrently -n api,ui -c blue,magenta -m 1 \"yarn test:api\" \"yarn test:ui\"",
    "test:ci": "concurrently -n api,ui -c blue,magenta -m 1 \"yarn test:api:ci\" \"yarn test:ui:ci\""
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "concurrently": "^7.3.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "jest": "^28.1.3"
  },
  "lint-staged": {
    "packages/ui/**/*.{ts,tsx}": [
      "yarn lint:ui",
      "yarn test:ui:ci"
    ],
    "packages/api/**/*.ts": [
      "yarn lint:api",
      "yarn test:api:ci"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
