{
  "name": "@portfolio/workspace",
  "version": "1.0.0",
  "description": "Portfolio",
  "author": "Chris Whitlam",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:api": "yarn --cwd packages/api build",
    "build:ui": "yarn --cwd packages/ui build",
    "build": "concurrently -n ui,api -c blue,magenta --kill-others \"yarn build:ui\" \"yarn build:api\"",

    "dev:api": "yarn --cwd packages/api dev",
    "dev:ui": "yarn --cwd packages/ui dev",
    "dev": "concurrently -n ui,api -c blue,magenta --kill-others \"yarn dev:ui\" \"yarn dev:api\""
  },
  "devDependencies": {
    "concurrently": "^7.3.0"
  }
}
